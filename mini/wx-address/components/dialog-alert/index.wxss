@import '/scss/app.wxss'; temp {
  width: 0;
}
.hover-class {
  opacity: 0.8;
  background: #f1f1f1;
}
.dialog-alert-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dialog-alert-wrap .dialog-alert-inner {
  background: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.dialog-alert-wrap .dialog-alert-content {
  flex: 1;
  width: 100%;
  padding: 30rpx;
  color: #333;
  font-size: 28rpx;
  min-height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.dialog-alert-wrap .dialog-loading-btn-wrap {
  flex: 1;
  width: 100%;
  height: 85rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  position: relative;
}
.dialog-alert-wrap .dialog-loading-btn-wrap:after {
  position: absolute;
  content: '';
  display: block;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  background: #D8D8D8;
}
.dialog-alert-wrap .dialog-loading-btn-wrap .dialog-loading-btn {
  min-width: 50%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-sizing: border-box;
  cursor: pointer;
}
.dialog-alert-wrap .dialog-loading-btn-wrap .dialog-loading-btn:nth-child(2n):after {
  position: absolute;
  content: '';
  display: block;
  left: 0;
  top: 0;
  width: 1px;
  height: 100%;
  background: #ccc;
}
