.share-bottom-wrap-box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
}
.share-bottom-wrap-box.isIponeX .share-bottom-btn {
  height: 120rpx;
  line-height: 120rpx;
  padding-bottom: 34rpx;
}
.share-bottom-wrap-box .share-bottom-mask {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  animation: share-bottom-mask 0.3s forwards;
}
.share-bottom-wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  background: #F2F2F2;
  animation: share-bottom-wrap 0.3s forwards;
}
.share-bottom-wrap .share-bottom-box {
  background: #fff;
  margin-bottom: 20rpx;
}
.share-bottom-wrap .share-bottom-btn {
  background: #fff;
  height: 100rpx;
}
.share-bottom-wrap .button-share {
  background: #fff;
  font-size: 34rpx;
  font-weight: normal;
}
.share-bottom-wrap .button-share:after,
.share-bottom-wrap .button-share:before {
  display: none;
}
@keyframes share-bottom-wrap {
  0% {
    transform: translateY(100%);
  }
  100% {
    transform: translateY(0%);
  }
}
@keyframes share-bottom-mask {
  0% {
    background: rgba(0, 0, 0, 0);
  }
  100% {
    background: rgba(0, 0, 0, 0.3);
  }
}
