.zz {
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.down {
  animation: downs 0.3s forwards 1;
}

@keyframes downs {
  0% {
    transform: translateY(0px);
    opacity: 1;
  }/*25% {
	transform:translateY(190px);
	opacity:0.8
	}
	50% {
	transform:translateY(190px);
	opacity:0.8
	}
	75% {
	transform:translateY(190px);
	opacity:0.8
	}*/

  to {
    transform: translateY(200px);
    opacity: 0;
  }
}

.up {
  animation: ups 0.3s forwards 1;
}

@keyframes ups {
  0% {
    transform: translateY(200px);
  }

  to {
    transform: translateY(0px);
  }
}

.mask-wrap {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.mask-show {
  display: block;
}

.mask-hide {
  display: none;
}


.mask-bg {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 100;
}

.mask {
  background: #fff;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  z-index: 999;
}

.mask-down {
  animation: downs 0.3s forwards 1;
}

.mask-up {
  animation: ups 0.3s forwards 1;
}

.mask-top {
  position: relative;
}

.mask-top .title {
  font-size: 36rpx;
  text-align: center;
  padding: 15rpx 0;
}

.mask-top .close {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100rpx;
  background: red;
}

.mask-content {
  height: 500rpx;
  line-height: 500rpx;
  text-align: center;
}